@model TicoPay.Groups.Dto.GroupDetailOutput
@{
    ViewBag.Title = "Detalle Grupo";
}
<div class="">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3>Detalle de @Html.DisplayFor(model => model.Name)</h3>
    </div>
    <div class="well">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-xs-6 col-md-4" })
                <div class="col-xs-6 col-md-8">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "NameText", @Type = "text", @disabled = "disabled" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description, new { @class = "control-label col-xs-6 col-md-4" })
                <div class="col-xs-6 col-md-8">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @id = "NameText", @Type = "text", @disabled = "disabled" })
                </div>
            </div>
            
            <hr />
        </div>
        <fieldset style="font-size: smaller;">
            <div class="row">
                <div class="col-md-3">
                    <strong>Fecha Creación:</strong>
                </div>
                <div class="col-md-4">@Html.DisplayFor(model => model.CreationTime)</div>
                <div class="col-md-3">
                    <strong>Creado Por: </strong>
                </div>
                <div class="col-md-2">
                    @{
                        var creatorUser = @Model.Users.Where(a => a.Id == Model.CreatorUserId).FirstOrDefault();
                    }
                    @if (creatorUser != null)
                    {
                        @creatorUser.UserName
                    }
                </div>
            </div>
            @if (Model.LastModifierUserId > 0)
            {
                <div class="row">
                    <div class="col-md-3">
                        <strong>Fecha Modificación:</strong>
                    </div>
                    <div class="col-md-4">@Html.DisplayFor(model => model.LastModificationTime)</div>
                    <div class="col-md-3">
                        <strong>Modificado Por: </strong>
                    </div>
                    <div class="col-md-2">
                        @{
                            var lastModifierUser = @Model.Users.Where(a => a.Id == Model.LastModifierUserId).FirstOrDefault();
                        }
                        @if (lastModifierUser != null)
                        {
                            @lastModifierUser.UserName
                        }
                    </div>
                </div>
                            }
        </fieldset>
    </div>
   
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
    </div>
</div>
