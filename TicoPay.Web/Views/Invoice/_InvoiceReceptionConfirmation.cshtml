@{
    ViewBag.Title = "Recepción de Factura Confirmada";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
<style>
    body {
        background-repeat: round;
        background-image: url('../../images/ticopay-facturacion-electronica-factura-register-background.png');
        height: 100%;
    }

    .signup-backdrp {
        background-color: #050505;
        opacity: .8;
        width: 100%;
        height: 100%;
        position: fixed;
    }
    .responsive-img {
        width: 100%;
        height: auto;
    }

</style>

<div class="signup-backdrp"></div>
<div class="container">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
            </div>
        </div>
    </nav>
    <div class="row">
        <div class="col-lg-12">
            <div class="well bs-component">
                <div align="center">
                    <img class="responsive-img" src="~/images/ticopay-facturacion-electronica-factura-software-encabezado-registrate.jpg" id="header-logo" alt="Logo" />
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title" style="background-color: rgba(47, 64, 80, 0.25);">
                                <h1>¡@ViewBag.Title!</h1>
                            </div>
                            <div class="ibox-content">
                                <div class="row">
                                    <p>
                                        Gracias por confirmar la recepción de tu factura.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
