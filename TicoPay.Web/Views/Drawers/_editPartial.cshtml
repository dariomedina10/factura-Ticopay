@using Abp.Web.Mvc.Extensions
@model TicoPay.Drawers.Dto.UpdateDrawerInput
@{
    ViewBag.Title = "Editar Caja";
}

<script src="@Url.Content("~/Scripts/util/formatter.js")" type="text/javascript"></script>


@using (Ajax.BeginForm("Edit", "Drawers", new AjaxOptions { HttpMethod = "POST" }, new { @class = "form-horizontal ", @id = "form" }))
{
    @Html.ValidationSummary(true)
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4>Editar @Model.Description</h4>
    </div>
    if (Model != null)
    {<div class="modal-body">
        <fieldset>
            <div class="well col-lg-12">

                <div class="input-group col-lg-10">
                    @Html.LabelFor(model => model.Code, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @id = "nameText", @Type = "text", @required = "required", @maxlength = "5", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Code)
                </div>
                <div class="input-group col-lg-10">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @id = "priceText", type = "text", @required = "required", @maxlength = "50", @readonly = "readonly" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
                @if (!Model.IsOpen)
                {
                    <div class="input-group col-lg-10">
                        @Html.LabelFor(model => model.BranchOfficeId, new { @class = "control-label" })
                        @{

                            <div>@Html.DropDownListFor(model => model.BranchOfficeId, new SelectList(Model.BranchOffices.OrderBy(x => x.Name), "Id", "Name"), "Seleccione una sucursal...", new { @id = "Taxes_DD", @class = "form-control", @required = "required" })</div>
                        }
                    </div>
                    <div class="input-group col-lg-10">
                        @Html.HiddenFor(model => model.RegisterID)
                        @Html.LabelFor(model => model.LastInvoiceNumber, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.LastInvoiceNumber, new { @class = "form-control", @id = "LastInvoiceText", @placeholder = "Culminó en...", @type = "text", @required = "required", @maxlength = "10", @pattern = @"[0-9]{1,10}", title = "ej. 1" })
                        @Html.ValidationMessageFor(model => model.LastInvoiceNumber)
                    </div>
                    <div class="input-group col-lg-10">
                        @Html.LabelFor(model => model.LastTicketNumber, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.LastTicketNumber, new { @class = "form-control", @id = "LastTickettText", @placeholder = "Culminó en...", @type = "text", @required = "required", @maxlength = "10", @pattern = @"[0-9]{1,10}", title = "ej. 1" })
                        @Html.ValidationMessageFor(model => model.LastTicketNumber)
                    </div>
                    <div class="input-group col-lg-10">
                        @Html.LabelFor(model => model.LastNoteCreditNumber, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.LastNoteCreditNumber, new { @class = "form-control", @id = "LastNoteCreditText", @placeholder = "Culminó en...", @type = "text", @required = "required", @maxlength = "10", @pattern = @"[0-9]{1,10}", title = "ej. 1" })
                        @Html.ValidationMessageFor(model => model.LastNoteCreditNumber)
                    </div>
                    <div class="input-group col-lg-10">
                        @Html.LabelFor(model => model.LastNoteDebitNumber, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.LastNoteDebitNumber, new { @class = "form-control", @id = "LastNoteDebittText", @placeholder = "Culminó en...", @type = "text", @required = "required", @maxlength = "10", @pattern = @"[0-9]{1,10}", title = "ej. 1" })
                        @Html.ValidationMessageFor(model => model.LastNoteDebitNumber)
                    </div>
                    <div class="input-group col-lg-10">
                        @Html.LabelFor(model => model.LastVoucherNumber, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.LastVoucherNumber, new { @class = "form-control", @id = "LastVouchertText", @placeholder = "Culminó en...", @type = "text", @required = "required", @maxlength = "10", @pattern = @"[0-9]{1,10}", title = "ej. 1" })
                        @Html.ValidationMessageFor(model => model.LastVoucherNumber)
                    </div>
                }


                <br />
                @if (Model.ErrorCode == 1)
    {
            <hr />
            <div class="alert alert-success alert-dismissible" role="alert" style="text-align: center">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>@Model.ErrorDescription</strong>
            </div>
}
else if (Model.ErrorCode == -1)
{
            <br />
            <div class="alert alert-danger alert-dismissible" role="alert" style="text-align: center">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <strong>@Model.ErrorDescription</strong>
            </div>
}
            </div>
        </fieldset>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>

    }
}
